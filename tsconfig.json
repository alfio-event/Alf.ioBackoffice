{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es2017",
            "dom",
            "ESNext"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "moduleResolution": "node",
        "removeComments": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ios.ts",
        "src/**/*.android.ts"
    ],
    "files": [
        "./src/main.ts",
        "./references.d.ts",
        "./src/polyfills.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}